/* pages/mypage/mypage.wxss */
.scroll_list {
  width: 100%;
  white-space: nowrap;
  position: fixed;
  background: white;
  z-index: 99;
}
.scroll_list view{
  display: inline-block;
  margin: 0 20rpx;
}
.scroll_list ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.adimage {
    height: 200rpx;
    width: 90%;
    margin: 0 auto;
    border-radius: 10rpx 10rpx 10rpx 10rpx;
    overflow: hidden;
    padding-top: 60rpx;
}
.adimage image{
  width: 100%;
  height: 200rpx;
}
.onunderline::after {
  display: block;
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  color: red;
}
.navgroup1 image {
  width: 90rpx;
  height: 90rpx;
}
.navgroup1 {
  white-space: nowrap;
}
.navgroup1_items {
  display: inline-block;
  width: 125rpx;
  text-align: center;
}
.navgroup1_items view {
  font-size: 30rpx;
}
.navgroups {
  width: 90%;
  margin: 20rpx auto;
  background-color: pink;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.navgroup1 ::-webkit-scrollbar {
  display: block;
  color: red;
  width: 30rpx;
  height: 5rpx;
}
.navgroup2 ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.navgroup2 {
  white-space: nowrap;
  margin-top: 20rpx;
}
.navgroup2_items {
  display: inline-block;
  width: 130rpx;
  height: 90rpx;
  position: relative;
  overflow: hidden;
  font-size: 20rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  box-shadow: 1rpx 3rpx 5rpx 1rpx rgb(122, 122, 122);
  margin: 0 5rpx;
}
.navgroup2_items image {
  position: absolute;
  bottom: -25rpx;
  right: -20rpx;
  width: 80rpx;
  height: 80rpx;
}
.navgroup2_items view:first-child {
  font-size: 30rpx;
  font-weight: bolder;
}
.navgroup2_items .hot {
  top: -5rpx;
  right: 0rpx;
  width: 40rpx;
  height: 30rpx;
}
.movieNow {
  width: 90%;
  height: 400rpx;
  margin: 15rpx auto;
  background-color:aqua;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.movieNow_title {
  width: 99%;
  height: 50rpx;
}
.movieNow_title view {
  float: left;
  font-weight: bolder;
}
.movieNow_title>rich-text {
  float: right;
  font-size: 25rpx;
  line-height: 40rpx;
}
.movieNow_itembox {
  white-space: nowrap;
  width: 99%;
  height: 320rpx;
}
.movieNow_items {
  text-align: center;
  display: inline-block;
}
.movieNow_image {
  width: 150rpx;
  height: 200rpx;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 1rpx 3rpx 5rpx 1rpx rgb(167, 167, 167);
}
.movieNow_image image {
  width: 100%;
  height: 100%;
}
.movieNow_items button {
  width: 200rpx;
}
.movieNow_items view {
  text-align: left;
  margin: 10rpx;
  overflow:hidden;
  width: 150rpx;
  text-overflow: ellipsis;
}
.movieNow_items button {
  color: white;
  background-color: rgb(231, 189, 0);
  border-radius: 20rpx;
  font-size: 25rpx;
  font-weight: 100;
  padding: 0;
  position: relative;
  left: -20rpx;
}
.movieNow_items .movietype {
  position: absolute;
  z-index: 99;
  top: 0;
  font-size: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  left: 0;
  border-radius: 10rpx;
  padding: 3rpx;
}
.movieNow_items .moviescore {
  position: absolute;
  z-index: 99;
  bottom: 0;
  left: 0;
  color: gold;
  font-size: 20rpx;
}
.ready {
  background-color: orange;
  height: 450rpx;
}
.ready .movieNow_itembox {
  height: 370rpx;
}
.ready .movieNow_items {
  height: 370rpx;
}
.ready> .movieNow_title>view>rich-text {
  font-weight: 300;
  line-height: 40rpx;
  margin-left: 20rpx;
  float: right;
  font-size: 25rpx;
}
.movieNow_items .wantsee {
  background-color: gold;
}
.movieNow_items .salebefore {
  background-color: aqua;
}
.movieNow_items {
  font-size: 26rpx;
}
.more_text {
  color: white;
  position: absolute;
  top: 60rpx;
  left: 20rpx;
  width: 130rpx;
  height: 200rpx;
  word-wrap: break-word;
  white-space: normal;
}